

    1  yum -y install createrepo 
    2  mkdir -p /repos/centos/7/extras/x86_64/Packages/
    3  ls -l
    4  mv helloworld-0.1-1.el7.centos.x86_64.rpm /repos/centos/7/extras/x86_64/Packages/
    5  createrepo --update /repos/centos/7/extras/x86_64/Packages/
    6  yum -y install httpd
    7  setenforce 0
    8  systemctl enable httpd
    9  systemctl start httpd
   10  ln -s  /repos/centos /var/www/html/centos
   11  cp /etc/httpd/conf/httpd.conf /etc/httpd/conf/httpd.conf.bak
   12  sed -i '144i     Options All' /etc/httpd/conf/httpd.conf
   13  sed -i '145i    # Disable directory index so that it will index our repos' /etc/httpd/conf/httpd.conf
   14  sed -i '146i     DirectoryIndex disabled' /etc/httpd/conf/httpd.conf
   15  sed -i 's/^/#/' /etc/httpd/conf.d/welcome.conf 
   16  chown -R apache:apache /repos/
   17  systemctl restart httpd
